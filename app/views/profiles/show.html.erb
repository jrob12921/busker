<% if user_signed_in? && current_user.id == @profile.user_id %>

  <div class="row">
      <div class="col-xs-10">  
        <h1>My Profile <%= link_to("(My Reviews)", "/user_reviews/#{current_user.id}", method: :get) %></h1>

        <h2><%= link_to("Edit My Profile", edit_profile_path(@profile.id), method: :get) %></h2>
      </div>
  </div>

<% else %>

  <div class="row">
      <div class="col-xs-10">  
        <h1><%= @profile.username %>'s Profile <%= link_to("(Check Out Their Reviews)", "/user_reviews/#{@profile.user.id}", method: :get) %></h1>
      </div>
  </div>

<% end %>

<div class="row">
  
  <div class="col-xs-10">  
    <ul> 
      <li>Name: <%= @profile.full_name %></li>
      <li>Borough: <%= @profile.borough %></li>
      <li>Neighborhood: <%= @profile.neighborhood %></li>
    </ul>
  </div>
</div>

<div class="row">
  
  <div class="col-xs-4">
    <!-- Empty Div for spacing -->
  </div>

  <div class="col-xs-10">
    <%= image_tag @profile.avatar.url(:medium) %>
  </div>

</div>

