
  <div class="col-xs-12">
    <h1 class="heading"><%= link_to(@station_with_line, station_path(@review.station.id), method: :get) %><h1>
  </div>

<div class="row edit-review">
  <div class="col-xs-10">
    <h4>Back to my reviews <%= link_to('<i class="fa fa-list"></i>'.html_safe, my_reviews_path, method: :get) %></h4>
    <h5>Edit your review by clicking over the area you want to change. Be careful, it will save automatically!</h5>
  </div>
</div>

<div class="row edit-review ">
  <div class="col-xs-4"><strong>Title:</strong></div>
    
      <div class= "col-xs-6">
        <%= best_in_place @review, :title, :url => station_review_path, :data => {:review_title => @review.title}, :class => 'highlight_on_success', :as => :input %>
    </div>
  
</div>

<div class="row edit-review">
  <div class="col-xs-4"><strong>Date Seen:</strong></div>
    
     <div class= "col-xs-6">
      <%= best_in_place @review, :date_seen, :url => station_review_path, :data => {:review_date_seen => @review.date_seen.strftime("%-m/%-d/%Y")}, :class => 'highlight_on_success', :as => :input, :display_as => :format_date %>
    </div>

</div>

<div class="row edit-review">
  <div class="col-xs-4"><strong>Rating:</strong></div>
    <%= bootstrap_form_for(@review, url: station_reviews_path, method: :post) do |r| %>
      
      <div class="col-xs-2">
        <a href="/rating_down/<%= @review.id %>" data-remote="true" data-rating="false" class="rating">
          <%= r.radio_button :rating, false, class: "radio" %>
          <i class="fa fa-2x fa-thumbs-o-down" id="down"></i>
        </a>
      </div>

      <div class="col-xs-2">
        <!-- Div for spacing -->
      </div>

      <div class="col-xs-2">
        <a href="/rating_up/<%= @review.id %>" data-remote="true" data-rating="true" class="rating">
          <%= r.radio_button :rating, true, class: "radio" %>
          <i class="fa fa-2x fa-thumbs-o-up" id="up"></i>
        </a>
      </div>
      
    <% end %>
  
</div>

<div class="row edit-review">
  <div class="col-xs-4"><strong>Content:</strong></div>
    
      <div class= "col-xs-6">    
        <%= best_in_place @review, :content, :display_with => :simple_format, :url => station_review_path, :data => {:review_content => @review.content}, :class => 'highlight_on_success', :as => :input %>
    </div>
  
</div>

<div class="row edit-review">
  <div class="col-xs-4"><strong>Artist Name:</strong></div>
    
      <div class= "col-xs-6">
        <%= best_in_place @review, :artist_name, :url => station_review_path, :data => {:review_artist_name => @review.artist_name}, :class => 'highlight_on_success', :as => :input %>
    </div>
 
</div>

<div class="row edit-review">
  <div class="col-xs-4"><strong>Instruments:</strong></div>
    
      <div class= "col-xs-6">
        <%= best_in_place @review, :instruments, :url => station_review_path, :data => {:review_instruments => @review.instruments}, :class => 'highlight_on_success', :as => :input %>
    </div>
  
</div>

<div class="row edit-review">
  <div class="col-xs-4"><strong>More Info:</strong></div>
    
     <div class= "col-xs-6">
      <%= best_in_place @review, :add_info, :url => station_review_path, :data => {:review_add_info => @review.add_info}, :class => 'highlight_on_success', :as => :input %>
    </div>
  
</div>
<br>
<div class="row edit-review">
  <div class="col-xs-3">
    <%= bootstrap_form_for @review, :url => station_review_path(@review.station_id, @review), :html => { :multipart => true} do |f| %>
    <%= f.file_field :avatar, hide_label: true, class: "pick_file" %>
    <%= f.submit :Update, class: "update_file", style: "display:none" %>
    <% end %>
  </div>
</div>
<br>
<div class="row edit-review">
    <%= image_tag @review.avatar.url(:medium), class: "edit-review" %>
</div>
<br>
<div class="row edit-review">
  <div class="col-xs-12">
    <%= link_to("DELETE REVIEW", station_review_path(@review.station_id, @review), method: :delete) %>
  </div>
</div>