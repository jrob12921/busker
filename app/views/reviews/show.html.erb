<% if user_signed_in? && current_user.id == @review.user_id %>

<div class="col-xs-12">

  <div><span class="heading">My Review </span><%= link_to('<i class="fa fa-2x fa-pencil-square"></i>'.html_safe, edit_station_review_path(@review.station.id, @review.id), method: :get) %><%= link_to('<i class="fa fa-2x fa-user"></i>'.html_safe, profile_path(current_user.profile.id), method: :get ) %></div> 
    
</div>

<% else %>

  <div class="col-xs-12">

    <h1>Review Left By: <%= link_to(@username, profile_path(@profile), method: :get ) %></h1>

  </div>

<% end %>

<div class="row">
  <div class="col-xs-12"></div>

    <ul>

      <li>Title: <%= @review.title %></li>

      <li>Date Seen: <%= @review.date_seen.strftime("%-m/%-d/%Y") %></li>

      <li class="rating">
        Rating:
        <% if @review.rating == false %>
          <i class="fa fa-2x fa-thumbs-down" id="down"></i>
        <% else %>
          <i class="fa fa-2x fa-thumbs-up" id="up"></i>
        <% end %>
      </li>

      <li>Content: <%= @review.content %></li>

      <li>Artist Name: <%= @review.artist_name %></li> 

      <li>Instruments: <%= @review.instruments %></li>

      <li>More Info: <%= @review.add_info %></li>

    </ul>

      <li><%= image_tag(@review.avatar.url(:medium)) %></li>

  </div>
</div>
